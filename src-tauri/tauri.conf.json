{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "genie-terminal",
  "version": "0.1.0",
  "identifier": "com.genie-terminal.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Genie Terminal",
        "width": 1024,
        "height": 768,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
